<h1 class="section-title">Films Populaires</h1>

<div class="row movie-grid">
  <% if @movies.present? %>
    <% @movies.each do |movie| %>
      <div class="col-md-3 mb-4">
        <div class="card">
          <div class="card-image" style="background-image: url('https://image.tmdb.org/t/p/w500<%= movie["poster_path"] %>'); height: 300px; background-size: cover; background-position: center;"></div>
          <div class="card-body">
            <h5 class="card-title"><%= movie["title"] %></h5>
            <p class="card-text">
              <%= movie["overview"] ? truncate(movie["overview"], length: 100) : "Aucune description disponible." %>
            </p>
            <div class="card-actions">
              <a href="#" class="btn btn-primary">Ajouter Ã  ma liste</a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>Aucun film populaire disponible pour le moment.</p>
  <% end %>
</div>
