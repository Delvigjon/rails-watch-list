<h1 class="section-title">Films Populaires</h1>

<div class="movie-grid" style="min-height: 100vh;">
  <% if @movies.present? %>
    <% @movies.each do |movie| %>
      <div class="card">
        <!-- Image du film -->
        <div 
          class="card-image" 
          style="background-image: url('https://image.tmdb.org/t/p/w500<%= movie["poster_path"] %>');">
        </div>

        <!-- Contenu de la carte -->
        <div class="card-body">
          <!-- Titre du film -->
          <h5 class="card-title"><%= movie["title"] %></h5>
          
          <!-- Popularité et genres -->
          <p class="card-subtitle text-muted">
            Popularité : <%= movie["popularity"] %> | Genre : <%= movie["genre_ids"].join(', ') %>
          </p>

          <!-- Description du film -->
          <p class="card-text">
            <%= movie["overview"].present? ? truncate(movie["overview"], length: 100) : "Aucune description disponible." %>
          </p>

          <!-- Bouton Ajouter -->
          <div class="card-actions">
            <a href="#" class="btn btn-primary">Ajouter à ma liste</a>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-center text-muted">Aucun film populaire disponible pour le moment.</p>
  <% end %>
</div>
