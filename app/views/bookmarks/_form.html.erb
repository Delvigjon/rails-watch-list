<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with(model: [@list, @bookmark], local: true) do |f| %>
        <% if @bookmark.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h2><%= pluralize(@bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>
            <ul>
              <% @bookmark.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :comment %>
          <%= f.text_area :comment, class: 'form-control', placeholder: 'Enter comment' %>
        </div>

        <div class="form-group">
          <%= f.label :movie_id %>
          <%= f.number_field :movie_id, class: 'form-control', placeholder: 'Enter movie ID' %>
        </div>

        <div class="form-group">
          <%= f.submit 'Save', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
