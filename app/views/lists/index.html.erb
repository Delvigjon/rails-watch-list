<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="my-4">My Lists</h1>

      <%= link_to 'Create a Movie List', new_list_path, class: 'btn btn-primary mb-3' %>

      <div class="row">
        <% @lists.each do |list| %>
          <div class="col-md-4">
            <div class="card mb-4">
              <div class="card-body">
                <h5 class="card-title">
                  <%= link_to list.name, list, class: 'text-decoration-none' %>
                </h5>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
