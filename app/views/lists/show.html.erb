<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= @list.name %></h1>

      <h2>Bookmarks</h2>

      <table class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>Comment</th>
            <th>Movie ID</th>
            <th colspan="2">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @list.bookmarks.each do |bookmark| %>
            <tr>
              <td><%= bookmark.comment %></td>
              <td><%= bookmark.movie_id %></td>
              <td>
                <%= link_to 'Delete', bookmark, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to 'New Bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
      <%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
