<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= @list.name %></h1>
      
      <div class="row">
        <% @list.bookmarks.each do |bookmark| %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="<%= bookmark.movie.title %> poster">
              <div class="card-body">
                <h5 class="card-title">
                  <%= link_to bookmark.movie.title, '#' %> <!-- Lien vers une page de détails du film -->
                  <span class="badge bg-warning"><%= bookmark.movie.rating %> / 10</span> <!-- Rating affiché comme badge -->
                </h5>
                <p><%= bookmark.movie.overview %></p> <!-- Overview du film -->
                <p class="card-text"><%= truncate(bookmark.comment, length: 100) %></p>
              </div>
              <div class="card-footer">
                <%= link_to 'Delete', bookmark, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm mr-2' %>
                <%= link_to 'Details', bookmark, class: 'btn btn-primary btn-sm' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-4">
        <%= link_to 'New Bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
        <%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
