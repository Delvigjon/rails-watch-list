<div class="container">
  <div class="row">
    <div class="col">
      <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>Le Wagon brings <strong>tech skills</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
    <a class="btn btn-flat" href="#">Apply now</a>
  </div>
</div>

      <h1><%= @list.name %></h1>
      <div class="row">
        <% @list.bookmarks.each do |bookmark| %>
          <div class="col-md-4">
            <div class="card mb-4">
              <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="<%= bookmark.movie.title %> poster">
              <div class="card-body">
                <h5 class="card-title"><%= bookmark.movie.title %></h5>
                <p class="card-text"><%= bookmark.comment %></p>
                <%= link_to 'Delete', bookmark, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
          
      <%= link_to 'New Bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
      <%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>


